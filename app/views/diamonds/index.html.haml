%h1 Listing diamonds

%p
  = link_to 'Download excel', url_for(format:'xlsx')

= form_for(@search, url:diamonds_path,as: :search, html:{id:'diamonds_search'}, method:'get') do |f|
  %ul
    - Diamond.ranges.each do |key, value|
      %li
        - puts "Key=#{key.inspect}, value=#{value.inspect}"
        = key.capitalize
        = f.select key, options_for_select(value.push('All'), 'All'), {}, 
                :onchange=>"javascript: updateSearch();"
    = f.submit "Search", :name => nil, :id => 'diamonds_search'

  %div#diamonds
    = render 'diamonds'

= link_to 'New Diamond', new_diamond_path
