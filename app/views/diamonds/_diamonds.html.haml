= will_paginate @diamonds

%table
  %tr
    %th Shape
    %th Size
    %th Color
    %th Clarity
    %th Cut
    %th Polish
    %th Sym
    %th Flour
    %th Number of results
    %th Rap percentage
    %th
    %th
    %th

  - @diamonds.each do |diamond|
    %tr
      %td= diamond.shape
      %td= diamond.size
      %td= diamond.color
      %td= diamond.clarity
      %td= diamond.cut
      %td= diamond.polish
      %td= diamond.sym
      %td= diamond.flour
      %td= diamond.number_of_results
      %td= diamond.rap_percentage
      %td= link_to 'Show', diamond
      %td= link_to 'Edit', edit_diamond_path(diamond)
      %td= link_to 'Destroy', diamond, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

