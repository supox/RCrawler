= ajax_will_paginate @diamonds

%table.table.table-striped.table-bordered.table-condensed
  %tr
    %th Shape
    %th Size
    %th Color
    %th Flour
    %th Clarity
    %th Cut
    %th Polish
    %th Sym
    %th Number of results
    %th Rap percentage
    %th Last updated

  - @diamonds.each do |diamond|
    %tr
      %td= diamond.shape
      %td= diamond.size
      %td= diamond.color
      %td= diamond.flour
      %td= diamond.clarity
      %td= diamond.cut
      %td= diamond.polish
      %td= diamond.sym
      %td= diamond.number_of_results
      %td= diamond.percentage_with_offset
      %td= diamond.updated_at

%br

= ajax_will_paginate @diamonds


